<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
   <%- include('./partials/navbar.ejs') %> 

   <h1 class="h1-text" style="text-align: center;">Blogs</h1>

   

   <div class="blogs">
      <% if(blogs.length > 0) { %>
         <% blogs.forEach(blog => { %>
            <div class="card">
               <div class="card-body">
                 <h5 class="card-title"><%= blog.title %></h5>
                 <p class="card-text"><%= blog.body%></p>
                 <a href="#" class="btn btn-primary">View Blog</a>
               </div>
             </div>
         <% }) %>
      <% } %>
   </div>
</body>
</html>